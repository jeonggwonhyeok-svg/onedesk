<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme for Android 12+ with full custom splash screen -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <!-- Use our pre-rendered splash image with gradient + logo -->
        <item name="android:windowBackground">@drawable/launch_background</item>
        <!-- Disable Android 12+ splash screen by making it transparent and instant -->
        <item name="android:windowSplashScreenBackground">@android:color/transparent</item>
        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="android:windowSplashScreenAnimationDuration">1</item>
    </style>
    <style name="SplashTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <!-- Android 12+ 시스템 스플래시 투명화 -->
        <item name="android:windowSplashScreenBackground">@android:color/transparent</item>
        <item name="android:windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="android:windowSplashScreenAnimationDuration">1</item>
    </style>
</resources>
